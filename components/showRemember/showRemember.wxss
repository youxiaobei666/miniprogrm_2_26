.big-box {
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 40rpx;
  border: #ffcce6 solid 4rpx;
  box-sizing: border-box;
  width: 700rpx;
}

.item-box {
  /* border-bottom: #666666 solid 2rpx; */
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  border-bottom: #ffcce6 solid 2rpx;
  height: 100rpx;
  align-items: center;
}

.date {
  border: #ffcce6 solid 2rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  width: 400rpx;
  justify-content: center;
  font-size: 21rpx;
}

.weather-box {
  border: #ffcce6 solid 2rpx;
