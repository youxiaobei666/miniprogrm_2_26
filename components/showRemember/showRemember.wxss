.container-text {
  display: flex;
  border-bottom: #ffcce6 solid 2rpx;
  border-left: #ffcce6 solid 2rpx;
  border-right: #ffcce6 solid 2rpx;
  padding: 20rpx;
  /* width: 680rpx; */
  height: 600rpx;
  align-items: center;
  box-sizing: border-box;
}
.weather {
  width: 116rpx;
  text-align: center;
}
.icon-box {
  width: 40rpx;
  height: 40rpx;
}
.icon {
  width: 100%;
  height: 100%;
}

.options-box {
  display: flex;
  justify-content: space-between;
  border-bottom: #ffcce6 dashed 4rpx;
  height: 100rpx;
